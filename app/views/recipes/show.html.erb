<div class="main_content">
		<div class="row">
			<div id="recipe_top">
				<div class="col-sm-4 col-md-offset-1">
					<%= image_tag @recipe.image.url(:medium), class: "recipe_image" %>
				</div>
				

				<div class="col-sm-6">
					<div id="recipe_info">
						<h1><%= @recipe.title%> </h1>
						<p> <%= @recipe.description%></p>
						<p>
							Submitted by
							<%= @recipe.user.email %>
						</p>
					</div>
				</div>
			</div>
		</div>
		
		<div class="row">
			<div class="col-sm-5 col-md-offset-1">
				<div id="ingredients">
					<ul>
						<% @recipe.ingredients.each do |ingredient| %>
						<li>
							<%= ingredient.name %>
						</li>
						<% end %>
					</ul>
				</div>
			</div>
		
			<div class="col-sm-5">
				<div id="directions">
					<ul>
						<% @recipe.directions.each do |direction| %>
						<li>
							<%= direction.step %>
						</li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-3 col-md-offset-5">
				<%= link_to 'Back', root_path,class: "btn btn-default" %>
				<%if user_signed_in? %>
					|<%= link_to like_recipe_path(@recipe), method: :put , class: "btn btn-default"  do %>
						<span class="glyphicon glyphicon-heart" style="color:red"></span>
							<%=	@recipe.get_upvotes.size %>
			<% end %>
					<%= link_to 'Edit', edit_recipe_path,class: "btn btn-default" %> |
					<%= link_to 'Delete',recipe_path(@recipe), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-default" %> 
				<% end %>
			</div>
		</div>
	
</div>




	




